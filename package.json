{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "build:ssr": "vite build && vite build --ssr",
        "dev": "vite",
        "serve": "php artisan serve",
        "check-setup": "node smart-start.js",
        "smart-start": "node smart-start.js && npm run start",
        "auto-setup": "npm run check-setup || npm run setup",
        "start": "concurrently --names \"LARAVEL,VITE\" --prefix-colors \"blue,green\" \"npm run serve\" \"npm run dev\"",
        "start:auto": "npm run auto-setup && npm run start",
        "format": "prettier --write resources/",
        "format:check": "prettier --check resources/",
        "lint": "eslint . --fix",
        "types": "tsc --noEmit",
        "clear": "php artisan cache:clear ; php artisan config:clear ; php artisan view:clear ; php artisan route:clear",
        "prepare-db": "node -e \"const fs = require('fs'); const path = 'database/database.sqlite'; if (!fs.existsSync('database')) fs.mkdirSync('database', {recursive: true}); if (!fs.existsSync(path)) { fs.writeFileSync(path, ''); console.log('Banco SQLite criado.'); } else { console.log('Banco SQLite já existe.'); }\" && php artisan migrate --force",
        "setup": "composer install && npm install && npm run prepare-env && npm run prepare-db",
        "prepare-env": "node -e \"const fs = require('fs'); if (!fs.existsSync('.env')) { fs.copyFileSync('.env.example', '.env'); console.log('Arquivo .env criado.'); } else { console.log('Arquivo .env já existe.'); }\" && php artisan key:generate --ansi",
        "reset-db": "php artisan migrate:fresh",
        "check-migrations": "php artisan migrate:status",
        "migrate": "php artisan migrate",
        "migrate-fresh": "php artisan migrate:fresh"
    },
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "@types/node": "^22.13.5",
        "concurrently": "^9.1.2",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-react": "^7.37.3",
        "eslint-plugin-react-hooks": "^5.1.0",
        "prettier": "^3.4.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "typescript-eslint": "^8.23.0"
    },
    "dependencies": {
        "@headlessui/react": "^2.2.0",
        "@inertiajs/react": "^2.0.0",
        "@radix-ui/react-avatar": "^1.1.3",
        "@radix-ui/react-checkbox": "^1.1.4",
        "@radix-ui/react-collapsible": "^1.1.3",
        "@radix-ui/react-dialog": "^1.1.6",
        "@radix-ui/react-dropdown-menu": "^2.1.6",
        "@radix-ui/react-label": "^2.1.2",
        "@radix-ui/react-navigation-menu": "^1.2.5",
        "@radix-ui/react-select": "^2.1.6",
        "@radix-ui/react-separator": "^1.1.2",
        "@radix-ui/react-slot": "^1.1.2",
        "@radix-ui/react-toggle": "^1.1.2",
        "@radix-ui/react-toggle-group": "^1.1.2",
        "@radix-ui/react-tooltip": "^1.1.8",
        "@tailwindcss/vite": "^4.0.6",
        "@types/react": "^19.0.3",
        "@types/react-dom": "^19.0.2",
        "@vitejs/plugin-react": "^4.3.4",
        "axios": "^1.9.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "globals": "^15.14.0",
        "laravel-vite-plugin": "^1.0",
        "lucide-react": "^0.475.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-icons": "^5.5.0",
        "react-router-dom": "^7.5.3",
        "tailwind-merge": "^3.0.1",
        "tailwindcss": "^4.0.0",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "^5.7.2",
        "vite": "^6.0"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "4.9.5",
        "@tailwindcss/oxide-linux-x64-gnu": "^4.0.1",
        "lightningcss-linux-x64-gnu": "^1.29.1"
    }
}
